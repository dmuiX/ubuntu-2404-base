name: Build ubuntu 2404 and upload to vagrant cloud
on:
  push:
    tags: ["v[0-9].[0-9]+.[0-9]+"]
    branches:
      - "main"
jobs:
  build-artifact:
    name: Build image and upload it to vagrant cloud
    runs-on: ubuntu-latest
    steps:
      - name: Packer Init
        run: packer init .
      - name: Packer Build - Branches
        if: "startsWith(github.ref, 'refs/heads/')"
        run: packer build .
